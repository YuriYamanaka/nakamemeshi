<h1>Nakamemeshi</h1>
<h3>グルメ詳細</h3>
<div class="food">
  <p><%= @food.name %></p>
  <p><%= @food.genre %></p>
  <p><%= @food.address %></p>
  <p><%= @food.cost %></p>
  <p><%= @food.about %></p>

  <div>
<h2>総合評価：
<span class="star-rating">
   <span class="star-rating-front" style="width: <%= getPercent(@food.overall) %>%;">★★★★★</span>
   <span class="star-rating-back">★★★★★</span>
</span> 
</h2>
</div>
<%= image_tag @food.image_url, size: "250x200" if @food.image? %>
  <p><%= @food.created_at %></p>
</div>



<% if user_signed_in? %>
      <% if current_user.already_liked?(@food) %>
        <%= button_to food_like_path(@food), method: :delete do %>
          <p>いいねを取り消す</p><%= @food.likes.count %>
        <% end %>
      <% else %>
        <%= button_to food_likes_path(@food), method: :food do %>
          <p>いいね</p><%= @food.likes.count %>
        <% end %>
      <% end %>
    <% else %>
      <p>いいねの数 = </p><%= @food.likes.count %>
    <% end %>
  <%= link_to "編集する", edit_food_path(@food.id) %>
</div>

<h2>いいねしたユーザー</h2>
<% @food.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>
<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@food, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>
<%= link_to "グルメ一覧に戻る", foods_path %>