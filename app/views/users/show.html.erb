<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<%= render 'follow_form' %>
<%= render 'stats' %>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.foods.each do |t| %>
    <%= t.user.name %>
    <%= t.name %>
    <%= t.genre %>
    <%= t.address %>
    <%= t.cost %>
    <%= t.about %>
    <%= t.date %>
    <% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_foods.each do |t| %>
    <%= t.user.name %>
    <%= t.name %>
    <%= t.genre %>
    <%= t.address %>
    <%= t.cost %>
    <%= t.about %>
    <%= t.date %>
<% end %>
<!-- ここまで-->


<%= link_to "グルメ一覧に戻る", foods_path %>